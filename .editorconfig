# editorconfig

root = true

# Pra todos os arquivos
[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Estilo de identação em arquivos HTML
[*.html]
indent_style = tab
indent_size = 2

# Estilo de identação em arquivos PHP
[*.php]
indent_style = tab
indent_size = 2

# Estilo de identação em arquivos CSS
[*.css]
indent_style = tab
indent_size = 2

# Estilo de identação em arquivos JS dentro do diretório Scripts
[*.js]
indent_style = tab
indent_size = 2